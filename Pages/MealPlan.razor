@page "/MealPlan"

<div class="containter d-flex flex-column vh-100">


    <div class="p-3">
        <div class="text-white h4 rounded-pill bg-primary d-inline-block px-3 py-2">Here is your personalized mealplan:</div>
        <div class="form-floating">
            @if (_isSendingMessage)
            {
                <div class="d-flex align-items-center">
                    <strong>Cooking up your mealplan...</strong>
                    <div class="spinner-border ms-auto text-primary" aria-hidden="true" role="status">
                    </div>
                </div>
            }
        </div>            
        <textarea class="form-control main-text" id="floatingTextarea2"  value="@MealPlanByAssistant" style="height: 800px; background-color: #fff;" readonly></textarea>
        <button type="submit" @ref="textareaRef" class="mt-3 btn-primary btn btn-Danger btn-lg rounded-5" @onclick="NavigateToAnotherPage">Get a new plan</button>
    </div>

</div>